<?xml version="1.0" encoding="utf-8"?>
<!-- // TODO : Replace ConstraintLayout with LinearLayout(gravity = center, orientation = vertical, padding= 10dp, background = @background_color, padding="10dp") -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/Background_color"

    tools:context="com.khalidbaba.projet1.MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/input_color"
        android:padding="10dp"
        android:hint="@string/name"
         />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="10dp"
        android:background="@color/input_color"
        android:padding="10dp"
        android:hint="@string/email"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:background="@color/input_color"
        android:padding="10dp"
        android:hint="@string/password"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        android:layout_marginTop="20dp"
        android:background="@color/btn_color"
        android:text="@string/btn_register"
        android:textColor="@color/white"
        />
